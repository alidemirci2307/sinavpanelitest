# Apache Güvenlik Ayarları

# PHP Bilgisini Gizle
<IfModule mod_headers.c>
    Header unset X-Powered-By
    Header always unset X-Powered-By
</IfModule>

# Dizin Listelemeyi Kapat
Options -Indexes

# Güvenlik Headers
<IfModule mod_headers.c>
    # XSS Koruması
    Header always set X-XSS-Protection "1; mode=block"
    
    # Clickjacking Koruması
    Header always set X-Frame-Options "DENY"
    
    # MIME Sniffing Koruması
    Header always set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy (gerektiğinde düzenleyin)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' cdn.jsdelivr.net; img-src 'self' data:; font-src 'self' cdn.jsdelivr.net; connect-src 'self';"
    
    # HTTPS Strict Transport Security (sadece HTTPS kullanıyorsanız aktif edin)
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# HTTPS Yönlendirmesi (SSL sertifikası kurduktan sonra aktif edin)
# <IfModule mod_rewrite.c>
#     RewriteEngine On
#     RewriteCond %{HTTPS} off
#     RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# </IfModule>

# Hassas Dosyaları Koru
<FilesMatch "^(config\.php|db\.php|security\.php|\.gitignore|\.htaccess|composer\.(json|lock)|.*\.log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Logs klasörünü koru
<DirectoryMatch "^.*/logs">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# PHP Dosya Yükleme Sınırlamaları
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log /path/to/logs/php_errors.log
    php_value upload_max_filesize 2M
    php_value post_max_size 2M
    php_value max_execution_time 30
    php_value max_input_time 30
</IfModule>

# Sadece belirli dosya türlerine erişime izin ver
<FilesMatch "\.(php|html|css|js|json|txt|jpg|jpeg|png|gif|svg|woff|woff2|ttf|eot)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# SQL ve backup dosyalarını engelle
<FilesMatch "\.(sql|bak|backup|old|swp|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Admin paneli için IP kısıtlaması (IP'leri değiştirin)
# <Directory "/path/to/admin">
#     Order Deny,Allow
#     Deny from all
#     Allow from 127.0.0.1
#     Allow from 192.168.1.0/24
# </Directory>

# ETags'i kaldır (güvenlik)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Tarayıcı Önbellekleme
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Gzip Sıkıştırma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>
